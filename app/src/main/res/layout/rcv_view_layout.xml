<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <LinearLayout        android:id="@+id/header"        android:visibility="visible"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="start"        android:paddingTop="10dp"        android:paddingLeft="18dp"        android:paddingRight="10dp"        android:paddingBottom="5dp">        <RelativeLayout            android:layout_width="30dp"            android:layout_height="30dp"            android:background="@drawable/chat_edit_text_bg">            <ImageView                android:padding="2dp"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:src="@drawable/chatbot"/>        </RelativeLayout>        <TextView            android:id="@+id/rcv_time"            android:gravity="center_vertical"            android:textAlignment="center"            android:paddingTop="6dp"            android:paddingLeft="8dp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="@dimen/time_size"            android:textColor="@color/time_color"            android:text="1:06 PM"            />    </LinearLayout>    <LinearLayout        android:id="@+id/view_text"        android:elevation="1dp"        android:orientation="vertical"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginTop="5dp"        android:layout_marginEnd="60dp"        android:padding="8dp"        android:background="@drawable/rcv_text_bg"        android:layout_marginLeft="20dp"        android:layout_marginRight="60dp">        <ImageView            android:id="@+id/rcv_image_view"            android:layout_width="320dp"            android:layout_height="320dp"            android:layout_gravity="center"            android:textColor="#FFF" />        <TextView            android:id="@+id/rcv_text"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="14sp"            android:textColor="#FFF"            android:text="Input Text"            />        <LinearLayout            android:id="@+id/view_btn"            android:layout_width="65dp"            android:layout_height="wrap_content"            android:layout_gravity="end"            android:layout_marginTop="8dp"            android:layout_marginEnd="8dp"            android:layout_marginRight="8dp"            android:layout_marginBottom="8dp"            android:background="@drawable/view_bg"            android:gravity="center"            android:padding="6dp">            <TextView                android:id="@+id/view_btn_text"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="@font/roboto_light"                android:text="View"                android:textSize="13dp"                android:textColor="#2893f1"                app:fontFamily="@font/roboto_medium" />        </LinearLayout>    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:layout_marginTop="5dp"        android:layout_marginRight="60dp"        android:id="@+id/button_view_list_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginEnd="60dp">    </android.support.v7.widget.RecyclerView>    <Space        android:layout_width="match_parent"        android:layout_height="5dp" />    <!--Layout for second or delayed message-->    <LinearLayout        android:visibility="gone"        android:id="@+id/aux_layout"        android:orientation="vertical"        android:layout_marginEnd="60dp"        android:layout_marginRight="60dp"        android:layout_marginStart="20dp"        android:layout_marginTop="5dp"        android:layout_marginLeft="20dp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:id="@+id/aux_text_layout"            android:elevation="1dp"            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:padding="8dp"            android:background="@drawable/rcv_text_bg">            <TextView                android:id="@+id/aux_text"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="14sp"                android:textColor="#FFF"                android:text="Input Text"                />        </LinearLayout>        <android.support.v7.widget.RecyclerView            android:id="@+id/aux_button_list_view"            android:layout_width="match_parent"            android:layout_height="wrap_content">        </android.support.v7.widget.RecyclerView>        <Space            android:layout_width="match_parent"            android:layout_height="5dp" />    </LinearLayout></LinearLayout>