<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView    xmlns:card_view="http://schemas.android.com/apk/res-auto"    xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/card_view"    android:background="@drawable/message_bg"    android:layout_width="match_parent"    android:layout_height="match_parent"    card_view:cardCornerRadius="4dp"    android:layout_margin="5dp">    <FrameLayout        android:background="#FF0000"        android:layout_width="4dp"        android:layout_height="match_parent"/>    <RelativeLayout        android:background="@drawable/message_bg"        android:layout_width="match_parent"        android:layout_margin="5dp"        android:layout_height="match_parent">        <TextView            android:id="@+id/pick_product_text"            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_alignParentStart="true"            android:layout_alignParentLeft="true"            android:layout_marginStart="8dp"            android:layout_marginLeft="8dp"            android:gravity="center_vertical"            android:text="contact det"            android:textColor="#a62424"            android:textSize="14dp" />    </RelativeLayout>    </android.support.v7.widget.CardView>