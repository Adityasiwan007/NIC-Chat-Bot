<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_weight="2"    android:padding="8dp">    <ImageView        android:layout_width="10dp"        android:layout_height="10dp"        android:src="@drawable/selected_dot"        android:layout_weight=".5"        android:layout_gravity="center"/>    <TextView        android:id="@+id/bullet_text"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="1.5"        android:paddingLeft="8dp"        android:text="Potato Potato"/></LinearLayout>